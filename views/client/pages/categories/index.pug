extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)

    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)

        .row(class="category-card")
            each item in categories 
                .col-3.mb-3
                    div(class="card")
                        img(src=item.image)
                        div(class="card-body")
                            h5(class="card-title") #{item.title}
                            a(href=`/tours/${item.slug}` class="btn btn-primary") View
