extends ../../layouts/default.pug 
include ../../mixins/alert.pug
include ../../mixins/box-head.pug

block main
    +alert-error(5000)
    +alert-success(5000)

    .container.my-4 
        .row 
            .col-12 
                +box-head(pageTitle)

        .row(class="tour-list")
            each tour in tours 
                .col-3.mb-3 
                    div(class="card")
                        div(class="card-image")
                            img(src=tour.image)
                        span(class="tour-tag") #{tour.tourTag}
                        div(class="card-body")
                            a(href=`/tours/detail/${tour.slug}`) 
                                h6(class="card-title") #{tour.title}
                            div #{tour.hasPickup ? "Pickup available": ""}
                            span.discount <i class="fa-solid fa-tag"></i> #{tour.discount ? tour.discount : "0"}%
                            span.old-price <i class="fa-solid fa-dollar-sign"></i>#{tour.price}
                            span.new-price <i class="fa-solid fa-dollar-sign"></i>#{tour.discounted_price}

