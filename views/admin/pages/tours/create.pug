extends ../../layouts/default.pug

block main
    h1(class="mb-4") #{pageTitle}

    form(
        action=`/${prefixAdmin}/tours/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Title
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="category") Category
            select(
                name="category_id"
                id="category"
                class="form-control"
                required
            )
                option(value="" disabled selected) -- Choose Category --
                each item in categories
                    option(value=item.id) #{item.title}

        div(class="form-group")
            label(for="images") Choose multiple images
            input(
                type="file"
                class="form-control-file"
                id="images"
                name="images"
                accept="image/*"
                multiple
            )

        div(class="form-group")
            label(for="price") Price
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="discount") % Discount
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discount"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="stock") Quantity
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="timeStart") Departure
            input(
                type="datetime-local"
                class="form-control"
                id="timeStart"
                name="timeStart"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="position") Position
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Auto-increment..."
                min="1"
            )

        div(class="form-group")
            label(for="information") Tour Information
            textarea(
                class="form-control"
                id="information"
                name="information"
                textarea-mce
            )

        div(class="form-group")
            label(for="schedule") Tour Schedule
            textarea(
                class="form-control"
                id="schedule"
                name="schedule"
                textarea-mce
            )

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Active
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
            )
            label(for="statusInActive" class="form-check-label") Inactive
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Create